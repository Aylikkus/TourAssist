<Window x:Class="TourAssist.View.RegistrationScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TourAssist.View"
        mc:Ignorable="d"
        Title="RegistrationScreen" Height="450" Width="800">
    <StackPanel>
        <TextBlock>Логин</TextBlock>
        <TextBox TextWrapping="Wrap" Text="{Binding Login}" Width="120"/>
        <TextBlock>Пароль</TextBlock>
        <TextBox TextWrapping="Wrap" Text="{Binding Password}" Width="120"/>
        <TextBlock>Имя</TextBlock>
        <TextBox TextWrapping="Wrap" Text="{Binding Name}" Width="120"/>
        <TextBlock>Фамилия</TextBlock>
        <TextBox TextWrapping="Wrap" Text="{Binding Surname}" Width="120"/>
        <TextBlock>Дата рождения</TextBlock>
        <Calendar DisplayDate="{Binding DateTimeOfBirth}"/>
        <Button Content="Зарегистрироваться" Command="{Binding Register}"/>
    </StackPanel>
</Window>
