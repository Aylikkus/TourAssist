<Window x:Class="TourAssist.View.LoginScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TourAssist.View"
        mc:Ignorable="d"
        Title="LoginScreen" Height="450" Width="800">
    <StackPanel>
        <TextBlock>Логин</TextBlock>
        <TextBox TextWrapping="Wrap" Text="{Binding Login}" Width="120"/>
        <TextBlock>Пароль</TextBlock>
        <TextBox TextWrapping="Wrap" Text="{Binding Password}" Width="120"/>
        <CheckBox Content="Запомнить меня" IsChecked="{Binding RememberMe}"/>
        <Button Content="Зарегистрироваться" Command="{Binding OpenRegistration}"/>
        <Button Content="Войти" Command="{Binding TryLogIntoApp}"/>
    </StackPanel>
</Window>
